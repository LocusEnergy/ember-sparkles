{{#ember-sparkles
  data=pieData
  output-key='sites'
  group-key='name'
  arc-threshold=arcThreshold
  arc-precision=2
  group-domain=(map-by 'name' pieData)
  as |chart|}}

  {{chart.pie-chart}}

  {{chart.legend
    shape='circle'
    dx=chart.width
    text-dx=22
    text-dy=3
  }}
{{/ember-sparkles}}

