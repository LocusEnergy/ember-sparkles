{{#ember-sparkles
  data=(pie-sparkler pieData dataKey='value')
  outputKey='value'
  groupKey='name'
  group-domain=(map-by 'name' pieData)
  as |chart|}}

  {{chart.pie-chart}}

  {{chart.legend
    shape='circle'
    dx=chart.width
    text-dx=22
    text-dy=3
  }}
{{/ember-sparkles}}

