{{!-- BEGIN-SNIPPET rotating-circle --}}
<g transform="translate({{dx}},0)">

  <circle cx="0" cy={{origin}} r={{radius}} />

  <g transform="translate(0, {{origin}})">
    <line class="connector" x2={{mult (sub dx wave-end) -1}} x1={{cx}} y1={{cy}} y2={{cy}}></line>
    <line class="triangle" id="x" x1=0 x2={{cx}} y1={{cy}} y2={{cy}}></line>
    <line class="triangle" id="hypotenuse" x1=0 x2={{cx}} y2={{cy}}></line>
    <line class="triangle" id="y" y1=0 y2={{cy}}></line>

    <circle class="point" cx={{cx}} cy={{cy}} r="4"/>
  </g>

</g>
{{!-- END-SNIPPET --}}
