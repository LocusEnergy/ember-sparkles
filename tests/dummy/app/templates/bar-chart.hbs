{{#ember-sparkles
  as |chart|}}

  {{chart.bar-chart
    data=data
    inputAccessor=(r/get 'ts')
    outputAccessor=(r/get 'value')
    ticks=5
    tick-format='%Y-%m-%d'
    y-label='value'

    xScale=(band-scale
      (map (r/get 'ts') data)
      (append 0 chart.width)
      round=true
      padding=0.02
    )

    yScale=(linear-scale
      (append 0 outputMax)
      (append chart.height 0)
      nice=true
    )

    transition=(ember-sparkles/transition duration=500 data=data)
  }}

{{/ember-sparkles}}

<button {{action (throttle (action "toggleData") 520)}}>Toggle Data</button>
