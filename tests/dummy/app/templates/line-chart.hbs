{{#ember-sparkles
  data=timeseriesData

  input-key='ts'
  output-key='Wh_sum'
  group-key='id'

  x-scale-type='time'
  y-scale-type='linear'
  x-domain=xDomain
  y-domain=yDomain
  group-domain=(map-by 'id' (sort-by 'id' timeseriesData))

  transition-duration=400

  as |chart|}}

  {{chart.line-chart}}

  {{chart.x-axis
    tick-format='%Y-%m-%d'
    label='date'
    dy=(add chart.height 30)
    dx=-100
    skip-idx=2
  }}

  {{chart.y-axis
    label='kWh'
    ticks=5
    yGrid=true
    dx=(mult -0.5 chart.height)
    dy=-30
  }}

  {{chart.legend
    dx=chart.width
  }}

{{/ember-sparkles}}

{{!-- END-SNIPPET --}}

<button {{action (throttle (action "toggleData") 500)}}>Toggle Data</button>

