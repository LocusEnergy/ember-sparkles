{{#if d3el}}

  {{!-- Write a helper for ember-sparkles/arc --}}
  {{#with (hash
    arc=(ember-sparkles/arc radius)
    labelArc=(ember-sparkles/arc radius true)
    pie=(ember-sparkles/pie valueFn=(pipe (d3-get 'population')))
  ) as |constructors|}}
    {{#with (compute
      (d3-join '.arc' (compute constructors.pie data)
        enter=(pipe
          (d3-append 'g')
          (d3-attr 'transform' (i 'translate(${w},${h})' h=centerHeight w=centerWidth))
          (d3-attr 'class' 'arc')
          (d3-append 'path')
          (d3-attr 'd' constructors.arc)
          (d3-style 'fill' colorScale)
        )
      ) d3el) as |arcs|}}
    {{/with}}
  {{/with}}

{{/if}}
