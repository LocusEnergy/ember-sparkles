{{!-- prototypical component, helpful for creating simple reactive shapes --}}

{{#d3-graph classNames=classNames as |d3|}}
  {{d3.graph (pipe
    (d3-select-all (concat '.' selector))
    (d3-data data data-accessor)
    (d3-join
      enter=(pipe
        (d3-append element-name)
        (d3-attr 'class' selector)
        element-attrs
      )

      update=(pipe
        (d3-transition transition)
        (or update-transition (d3-noop))
        element-attrs
      )

      exit=(pipe
        (or exit-transition (d3-noop))
        (d3-remove)
      )
    )
  )}}
  {{yield d3}}
{{/d3-graph}}
